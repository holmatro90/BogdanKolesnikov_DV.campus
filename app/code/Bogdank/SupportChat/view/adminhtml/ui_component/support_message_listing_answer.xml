<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd"
>
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">
                support_message_listing_answer.support_message_listing_answer_data_source
            </item>
        </item>
    </argument>
    <settings>
        <spinner>answer_columns</spinner>
        <deps>
            <dep>support_message_listing_answer.support_message_listing_answer_data_source</dep>
        </deps>
    </settings>
    <dataSource name="support_message_listing_answer_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <storageConfig>
                <param name="indexField" xsi:type="string">message_id</param>
            </storageConfig>
            <updateUrl path="mui/index/render"/>
        </settings>
        <aclResource>Bogdank_SupportChat::answer</aclResource>
        <dataProvider class="Bogdank\SupportChat\Ui\Component\Listing\DataProvider"
                      name="support_message_listing_answer_data_source">
            <settings>
                <requestFieldName>message_id</requestFieldName>
                <primaryFieldName>message_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <listingToolbar name="listing_top">
        <settings>
            <sticky>true</sticky>
        </settings>
        <bookmark name="bookmarks"/>
        <columnsControls name="columns_controls"/>
        <filters name="listing_filters"/>
        <exportButton name="export_button"/>
        <massaction name="listing_massaction">
            <action name="delete">
                <settings>
                    <confirm>
                        <message translate="true">Are you sure you want to delete the selected messages?</message>
                        <title translate="true">Delete messages</title>
                    </confirm>
                    <url path="bogdank_support_chat/chat/delete"/>
                    <type>delete</type>
                    <label translate="true">Delete Messages</label>
                </settings>
            </action>
        </massaction>
        <paging name="listing_paging"/>
    </listingToolbar>
    <columns name="answer_columns">
        <settings>
            <editorConfig>
                <param name="enabled" xsi:type="boolean">false</param>
            </editorConfig>
            <childDefaults>
                <param name="fieldAction" xsi:type="array">
                    <item name="provider" xsi:type="string">support_message_listing_answer.support_message_listing_answer_data_source</item>
                    <item name="target" xsi:type="string">applyAction</item>
                    <item name="params" xsi:type="array">
                        <item name="0" xsi:type="string">edit</item>
                        <item name="1" xsi:type="string">${ $.$data.chat_hash }</item>
                    </item>
                </param>
            </childDefaults>
        </settings>
        <selectionsColumn name="ids" sortOrder="0">
            <settings>
                <indexField>message_id</indexField>
            </settings>
        </selectionsColumn>
        <column name="message_id" sortOrder="10">
            <settings>
                <filter>textRange</filter>
                <sorting>asc</sorting>
                <label translate="true">Message ID</label>
            </settings>
        </column>
        <column name="user_id" sortOrder="20">
            <settings>
                <filter>text</filter>
                <label translate="true">Customer ID</label>
            </settings>
        </column>
        <column name="user_name" sortOrder="30">
            <settings>
                <filter>text</filter>
                <label translate="true">Customer Name</label>
            </settings>
        </column>
        <column name="message" sortOrder="40">
            <settings>
                <filter>text</filter>
                <label translate="true">Message</label>
            </settings>
        </column>
        <column name="chat_hash" sortOrder="50">
            <settings>
                <filter>text</filter>
                <label translate="true">Chat Hash</label>
            </settings>
        </column>
        <column name="website_id" component="Magento_Ui/js/grid/columns/select" sortOrder="60">
            <settings>
                <filter>select</filter>
                <options class="Magento\Store\Model\ResourceModel\Website\Collection"/>
                <dataType>select</dataType>
                <label translate="true">Website</label>
            </settings>
        </column>
        <column name="created_at" sortOrder="70">
            <settings>
                <filter>text</filter>
                <label translate="true">Send At</label>
            </settings>
        </column>
        <actionsColumn name="actions" class="Bogdank\SupportChat\Ui\Component\Listing\Column\Actions">
            <settings>
                <label translate="true">Answer</label>
                <indexField>chat_hash</indexField>
            </settings>
        </actionsColumn>
    </columns>
</listing>