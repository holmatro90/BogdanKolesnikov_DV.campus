<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="sidebar.additional">
            <block class="Magento\Cms\Block\Block" name="left_baner">
                <arguments>
                    <argument name="block_id" xsi:type="string">left_column_baner</argument>
                </arguments>
            </block>
            <block class="Magento\Framework\View\Element\Template"
                   name="sidebar.promo"
                   after="left_baner"
                   template="Bogdank_Catalog::product/view/sidebar.phtml"
            />
        </referenceContainer>
    </body>
</page>